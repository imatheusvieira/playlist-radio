<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <title>Radio Rihomo</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <script defer src="/script.js"></script>
</head>
<body>
    <nav>
        <ul>
            <li class="logo">
                <img src="/img/logo_rihomo.png" alt="" srcset="">
                <h1>Rihomo</h1> 
            </li>
            <li>
                <a id="adm"><i class="bi bi-gear"></i></a>  
            </li>
        </ul>
    </nav>

    <section id="player">
        <h1>Radio Rihomo</h1>
        
       <div>
        <img src="/img/musicoff.png" alt="" id="currentImg">
        <h2 id="currentName">Título da música</h2>
        <p id="currentArtist">Nome do artista ou banda</p>
        <p></p>
       </div>

        <div>
            <table>
                <thead>
                    <tr>
                        <th></th>
                        <th>Nome</th>
                        <th>Artista</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% playlist.forEach((music)=>{ %>
                    <tr class="musics">
                        <td>
                            <img src="<%= music.linkImage %>" alt="">
                        </td>
                        <td><%= music.name %></td>
                        <td><%= music.author %></td>
                        <td>
                            <audio src="<%= music.linkMusic %>"></audio>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

    </section>

    <section id="controls">
        <i id="prev-control" class="bi bi-skip-start-fill"></i>
        <i id="play-control" class="bi bi-play-fill"></i>
        <i id="next-control" class="bi bi-skip-end-fill"></i>

        <span id="current-duration">00:00</span>
        <input id="progressbar" type="range"  min="0" max="0" step="1">
        <span id="total-duration">00:00</span>
        <i class="bi bi-shuffle" id="random-icon"></i>

        <i id="vol-icon" class="bi bi-volume-up-fill"></i>
        <input id="volume" type="range" min="0" max="100" step="1">
    </section>

    <section id="modal-login">
        <form action="/login" method="post" id="card-login">
            
                <a id="close-modal-login"><i class="bi bi-x-lg"></i></a>
                <h2>Logar</h2> 
                <label for="user">Usuário</label>
                <input type="text" name="user" id="user" placeholder="Usuário">
                <label for="pass">Senha</label>
                <input type="password" name="pass" id="pass" placeholder="Senha">
                <button id="bt-logar">Logar</button>
        </form>
    </section>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.17.15/lodash.min.js"></script>
</body>
</html>